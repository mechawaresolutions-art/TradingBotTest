# Required: n8n webhook endpoint
N8N_WEBHOOK_URL=http://localhost:5678/webhook/forex-bot-webhook-id

# Optional: Heartbeat interval in seconds (default: 60)
HEARTBEAT_INTERVAL=60

# Optional: Python logging level (default: INFO)
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Bot name identifier (default: ForexBot)
BOT_NAME=ForexBot

# Optional: Initial paper trading balance in USD (default: 10000.0)
INITIAL_BALANCE=10000.0

# ===== Market Data Pipeline Configuration =====

# Database configuration
DATABASE_URL=postgresql+asyncpg://tradingbot:tradingbot_pass@localhost:5432/tradingbot
DB_USER=tradingbot
DB_PASSWORD=tradingbot_pass
DB_NAME=tradingbot

# Market data configuration
SYMBOL=EURUSD
TIMEFRAME=M5
INGEST_OVERLAP_CANDLES=10
INITIAL_BACKFILL_DAYS=7

# Provider: mock, real (default: mock)
MARKET_DATA_PROVIDER=mock
